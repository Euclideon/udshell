{
	"version": 1,
	"kind": "project",
	"id": "QA.PlatformActivityPlugin",
	"category": "H.Project",
	"trDescription": "Creates an Euclideon Platform Plugin Project",
	"trDisplayName": "Platform Activity Plugin",
	"trDisplayCategory": "Other Project",
	"icon": "euclideon.png",

	"options": [
		{
			"key": "PluginName",
			"value": "%{JS: Util.fileName('%{ProjectDirectory}/%{ProjectName}', 'pro')}"
		},
		{
			"key": "PluginDescription",
			"value": "%{Description}"
		},
		{
			"key": "Namespace",
			"value": "%{NAMESPACE}"
		},
		{
			"key": "GUARD",
			"value": "%{JS: Cpp.classToHeaderGuard('%{ProjectName}', '%{JS: Util.preferredSuffix('text/x-c++hdr')}')}"
		},
		{
			"key": "LIBEP",
			"value": "liblibep.a"
		}
	],

	"pages": [
		{
			"trDisplayName": "Project Location",
			"trShortTitle": "Location",
			"typeId": "Project"
		},
		{
			"trDisplayName": "Component Details",
			"trShortTitle": "Details",
			"typeId": "Fields",
			"data": [
				{
					"name": "NAMESPACE",
					"trDisplayName": "Namespace:",
					"mandatory": true,
					"type": "LineEdit",
					"data": { "validator": "(?:(?:[a-zA-Z_][a-zA-Z_0-9]*::)+[a-zA-Z_][a-zA-Z_0-9]*|)" }
				},
				{
					"name": "Description",
					"trDisplayName": "Description:",
					"mandatory": true,
					"type": "LineEdit",
					"data": { }
				}
			]
		},
		{
			"trDisplayName": "Project Management",
			"trShortTitle": "Summary",
			"typeId": "Summary"
		}
	],
	"generators": [
		{
			"typeId": "File",
			"data": [
				{
					"source": "Sample.cpp",
					"target": "%{ProjectDirectory}/src/%{ProjectName}.cpp",
					"openInEditor": true
				},
				{
					"source": "Sample.h",
					"target": "%{ProjectDirectory}/src/%{ProjectName}.h",
					"openInEditor": true
				},
				{
					"source": "activity.pro",
					"target": "%{PluginName}",
					"openAsProject": true
				},
				{
					"source": "activity.qml",
					"target": "%{ProjectDirectory}/src/%{ProjectName}.qml",
					"openInEditor": true
				},
				{
					"source": "activity.qrc",
					"target": "%{ProjectDirectory}/src/%{ProjectName}.qrc",
					"openInEditor": false
				}
			]
		}
	]
}
